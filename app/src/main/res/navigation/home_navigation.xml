<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation.xml"
    app:startDestination="@id/homeFragment">


    <action
        app:launchSingleTop="true"
        android:id="@+id/action_notification"
        app:destination="@id/notificationFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
         />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mafqud.android.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.mafqud.android.map.MapFragment"
        android:label="MapFragment" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.mafqud.android.report.ReportFragment"
        android:label="ReportFragment" >
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_reportFragment_to_reportLostFragment"
            app:destination="@id/reportLostFragment" />
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_reportFragment_to_reportFoundFragment"
            app:destination="@id/reportFoundFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.mafqud.android.more.MoreFragment"
        android:label="MoreFragment" >
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_moreFragment_to_myAccountFragment"
            app:destination="@id/myAccountFragment" />
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_moreFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_moreFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            android:id="@+id/action_moreFragment_to_phonesFragment"
            app:destination="@id/phonesFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.mafqud.android.notification.NotificationFragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.mafqud.android.more.HelpFragment"
        android:label="HelpFragment" />
    <fragment
        android:id="@+id/myAccountFragment"
        android:name="com.mafqud.android.more.MyAccountFragment"
        android:label="MyAccountFragment" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.mafqud.android.more.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/phonesFragment"
        android:name="com.mafqud.android.more.PhonesFragment"
        android:label="PhonesFragment" />
    <fragment
        android:id="@+id/reportFoundFragment"
        android:name="com.mafqud.android.report.ReportFoundFragment"
        android:label="ReportFoundFragment" />
    <fragment
        android:id="@+id/reportLostFragment"
        android:name="com.mafqud.android.report.ReportLostFragment"
        android:label="ReportLostFragment" />
</navigation>