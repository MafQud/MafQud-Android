<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation.xml"
    app:startDestination="@id/homeFragment">


    <action
        app:launchSingleTop="true"
        android:id="@+id/action_notification"
        app:destination="@id/notificationFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
         />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mafqud.android.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.mafqud.android.map.MapFragment"
        android:label="MapFragment" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.mafqud.android.report.ReportFragment"
        android:label="ReportFragment" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.mafqud.android.more.MoreFragment"
        android:label="MoreFragment" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.mafqud.android.notification.NotificationFragment"
        android:label="NotificationFragment" />
</navigation>